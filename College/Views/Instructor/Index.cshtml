@model IEnumerable<Instructor>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4 text-center">Instuctors</h1>
<a asp-area="" asp-controller="Instructor" asp-action="Create" class="btn btn-primary mb-3">Add New Instrucor</a>

<!-- Table with Bootstrap classes -->
@if (Model.Any())
{
    <table id="employeeTable" class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(e => e.Id)</th>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.Age)</th>
                <th>@Html.DisplayNameFor(e => e.Email)</th>
                <th>@Html.DisplayNameFor(e => e.Phone)</th>

                <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Name</td>
                    <td>@e.Age</td>
                    <td>@e.Email</td>
                    <td>@e.Phone</td>

        
                    <partial name="_BottomPartial" model="@e.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-danger text-center">There are no Instructors.</h2>
}


<!-- Add Bootstrap JS (optional for interactivity) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
