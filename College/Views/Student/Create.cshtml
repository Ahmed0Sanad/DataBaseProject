@model Student
@{
    ViewData["Title"] = "Create";
}


<h1 class="mb-4 text-center">Add New Student</h1>

<form asp-action="Create" method="post" class="needs-validation" style="padding-left:10%;padding-right:10% " novalidate>
    <partial name="PartialViews/CreateEditPartial" model="@Model" />

    <div class="d-flex gap-2 justify-content-center">
        <input style="padding-left:10%;padding-right:10% " type="submit" name="Submit" value="Submit" class="btn btn-primary" />
        <a style="padding-left:10%;padding-right:10% "  class="btn btn-secondary" asp-area="" asp-controller="Student" asp-action="Index">Back To List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
