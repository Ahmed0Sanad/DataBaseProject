@model IEnumerable<OfferedCourse>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4 text-center">OFFERED COURSES</h1>

<!-- Table with Bootstrap classes -->
@if (Model.Any())
{
    <table id="employeeTable" class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(e => e.Id)</th>
                <th>@Html.DisplayNameFor(e => e.Course.Title)</th>
                <th>@Html.DisplayNameFor(e => e.Course.Price)</th>
                <th>@Html.DisplayNameFor(e => e.Year)</th>
                <th>@Html.DisplayNameFor(e => e.Semester)</th>
                <th>@Html.DisplayNameFor(e => e.ClassRoom)</th>

                <th colspan="6">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.CourseId</td>
                    <td>@e.Course.Title</td>
                    <td>@e.Course.Price</td>
                    <td>@e.Year</td>
                    <td>@e.Semester</td>
                    <td>@e.ClassRoom</td>
                    <td>
                        <a asp-area="" asp-controller="OfferedCourse" asp-action="Grade" asp-route-id="@e.CourseId" asp-route-year="@e.Year" class="AllBottom" style="
    font-size: .875rem;
   background-color: #7cc235;">
                            <i class="fas fa-plus " style="color:white"></i>  <p class="text-white myBotttom">Grades</p>
                        </a>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="OfferedCourse" asp-action="AddInstructor" asp-route-id="@e.CourseId" asp-route-year="@e.Year" class="AllBottom" style="    background-color: #664d03;">
                            <i class="fas fa-plus " style="color:white"></i> <p class="text-white myBotttom">Instructor </p>
                        </a>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="OfferedCourse" asp-action="Enroll" asp-route-id="@e.CourseId" asp-route-year="@e.Year" class="AllBottom" style="  background-color: #0a58ca;">
                            <i class="fas fa-plus " style="color:white"></i>  <p class="text-white myBotttom">Enroll</p>
                        </a>
                    </td>
                    <td>
                        <a asp-area="" asp-action="Details" asp-route-id="@e.CourseId" asp-route-year="@e.Year" class="btn btn-warning btn-sm">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-area="" asp-action="Edit" asp-route-id="@e.CourseId" asp-route-year="@e.Year" class="btn btn-success btn-sm">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-area="" asp-action="Delete" asp-route-id="@e.CourseId" asp-route-year="@e.Year" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-danger text-center">There are no Courses.</h2>
}


<!-- Add Bootstrap JS (optional for interactivity) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
