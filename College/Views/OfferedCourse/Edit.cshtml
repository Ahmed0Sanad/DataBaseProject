@model OfferedCourse
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form asp-action="Edit" method="post" class="needs-validation" novalidate>

    <div class="form-group mb-3">
        <label asp-for="Year" class="form-label">Year</label>
        <input type="text" asp-for="Year" id="Name" class="form-control"  readonly/>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Semester" class="form-label">Course Semester</label>
        <input type="text" asp-for="Semester" id="Num" class="form-control" />
        <span asp-validation-for="Semester" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SectionNum" class="form-label"> Section Number</label>
        <input type="number" asp-for="SectionNum" id="Code" class="form-control" />
        <span asp-validation-for="SectionNum" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Time" class="form-label">Time</label>
        <input type="time" asp-for="Time" id="Time" class="form-control" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ClassRoom" class="form-label">ClassRoom Number</label>
        <input type="number" asp-for="ClassRoom" id="ClassRoom" class="form-control" />
        <span asp-validation-for="ClassRoom" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="@Model.CourseId" />

    <div class="d-flex gap-2">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-secondary" asp-area="" asp-controller="OfferedCourse" asp-action="Index">Back To List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

