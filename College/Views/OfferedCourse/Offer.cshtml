@model OfferedCourse
@{
    ViewData["Title"] = "Offer";
}

<h1 class="mb-4 text-center">@ViewBag.course.Title</h1>

<form asp-action="Offer" method="post" class="needs-validation" style="padding-left:10%;padding-right:10% " novalidate>
   
    <div class="form-group mb-3">
        <label asp-for="Year" class="form-label">Year</label>
        <input type="text" asp-for="Year" id="Name" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Semester" class="form-label">Course Semester</label>
        <input type="text" asp-for="Semester" id="Num" class="form-control" />
        <span asp-validation-for="Semester" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SectionNum" class="form-label"> Section Number</label>
        <input type="number" asp-for="SectionNum" id="Code" class="form-control" />
        <span asp-validation-for="SectionNum" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Time" class="form-label">Time</label>
        <input type="time" asp-for="Time" id="Time" class="form-control" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ClassRoom" class="form-label">ClassRoom Number</label>
        <input type="number" asp-for="ClassRoom" id="ClassRoom" class="form-control" />
        <span asp-validation-for="ClassRoom" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2 justify-content-center">
        <input type="submit" name="Submit" value="Submit" style="padding-left:10%;padding-right:10% " class="btn btn-primary" />
        <a style="padding-left:10%;padding-right:10% " class="btn btn-secondary" asp-area="" asp-controller="Course" asp-action="Index">Back To List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
